---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Luxury Interiors Studio - Creating Timeless Spaces" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="antialiased">
    <header class="fixed top-0 left-0 right-0 z-50 bg-cream/80 backdrop-blur-md border-b border-charcoal/5">
      <nav class="max-w-7xl mx-auto px-6 py-5 flex items-center justify-between">
        <a href="/" class="font-playfair text-2xl tracking-tight text-charcoal">
          GR
        </a>
        <ul class="hidden md:flex items-center gap-10 text-sm tracking-wide">
          <li><a href="#projects" class="text-warm-gray hover:text-charcoal transition-colors duration-300">Projects</a></li>
          <li><a href="#philosophy" class="text-warm-gray hover:text-charcoal transition-colors duration-300">Philosophy</a></li>
          <li><a href="#contact" class="text-warm-gray hover:text-charcoal transition-colors duration-300">Contact</a></li>
        </ul>
        <a href="#contact" class="hidden md:block text-sm border border-charcoal px-5 py-2.5 hover:bg-charcoal hover:text-cream transition-all duration-300">
          Inquire
        </a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer id="footer" class="bg-charcoal text-cream py-16">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid md:grid-cols-3 gap-12 mb-12">
          <div>
            <h3 class="font-playfair text-2xl mb-4">GR</h3>
            <p class="text-warm-gray text-sm leading-relaxed">
              Crafting extraordinary interiors that transcend trends and stand the test of time.
            </p>
          </div>
          <div>
            <h4 class="text-sm tracking-wider mb-4 text-gold">CONTACT</h4>
            <p class="text-warm-gray text-sm">hello@GR-interiors.com</p>
            <p class="text-warm-gray text-sm">+1 (555) 123-4567</p>
          </div>
          <div>
